PairJaxMTPDirect::~PairJaxMTPDirect()
{
  cleanup_optimized_interface();
  cleanup_python();
  delete[] jax_function_path;
  
  if (allocated) {
    memory->destroy(setflag);
    memory->destroy(cutsq);
  }
}

